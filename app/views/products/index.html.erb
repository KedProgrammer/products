<div class="container">
  <div class="row">
    <h1 class="text-center">Products</h1>
  </div>
  <div class="btn-group float-right mt-2" role="group">
    <a class="btn btn-primary btn-md" href=<%= new_product_path %>>Nuevo Producto</a>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Category</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><span class="product-name"><%= link_to product.name, product %></span></td>
          <td><span class="product-price"><%= product.price %></span></td>
          <td><%= product.categories.pluck(:name).join(", ") %></td>
         <td><%= link_to 'Editar', edit_product_path(product) %></td>
         <td><%= link_to 'Eliminar', product_path(product), method: :delete %></td>
      <% end %>

        </tr>
      </tbody>
    </table>
   </div>
  </div>
</div>
